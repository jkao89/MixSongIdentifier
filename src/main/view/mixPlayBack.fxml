<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="borderPane">
        <center>
            <HBox alignment="CENTER" minWidth="600">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </padding>
                <Label fx:id="currentDurLabel"/>
                <Slider fx:id="trackSlider" blockIncrement="0.1" minHeight="30"
                HBox.hgrow="SOMETIMES"/>
                <Label fx:id="totalDurLabel"/>
            </HBox>
        </center>
        <bottom>
            <HBox alignment="CENTER">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </padding>
                <Button fx:id="ppButton" styleClass="icons" onAction="#ppButtonPressed"/>
            </HBox>
        </bottom>
</BorderPane>
